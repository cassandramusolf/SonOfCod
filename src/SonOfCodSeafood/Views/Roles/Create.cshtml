@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Create Role</h2>
    @using (Html.BeginForm("Create", "Roles", FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        <label>Role Name: @Html.TextBox("RoleName")</label>
        <input type="submit" name="submit" value="Add Role" />
    }
</div>