@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Roles Listing</h2>
    @foreach (var role in Model)
    {
        <div>
            @role.ToString() | <a href="/Roles/Edit?RoleName=@role.ToString()">Edit</a>
        </div>
    }
    <hr />
    <h3>@Html.ActionLink("Create a New Role", "Create", "Roles")</h3>

    <hr />
</div>
