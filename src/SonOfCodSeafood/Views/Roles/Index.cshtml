@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Roles Listing</h2>
    @foreach (var role in Model)
    {
        <div>
            @role.ToString() | <a href="/Roles/Edit?RoleName=@role.ToString()">Edit</a>
        </div>
    }
    <hr />
    <div>
        <h3>
            @Html.ActionLink("Role Management Home", "Index", "Roles")
            | @Html.ActionLink("Create a Role", "Create", "Roles")
            | @Html.ActionLink("Assign Roles", "Assign", "Roles")
        </h3>
    </div>
    <hr />
</div>
