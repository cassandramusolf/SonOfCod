@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Security.Claims

<div>
    <img class="product-img" src="~/images/seafood.jpg" />
    <h2 class="product-title">SON OF COD SEAFOOD</h2>
    <h4 class="small-title"><em>The Freshest Around</em></h4>
</div>

<hr />

<div class="container index-buttons">
    @if (User.Identity.IsAuthenticated)
    {
        <p>Hello @User.Identity.Name!</p>
        @using (Html.BeginForm("LogOff", "Account"))
        {
            <input type="submit" class="btn btn-default" value="Log out" />
        }
    }
    else
    {
        <h2 class="btn btn-default btn-lg">@Html.ActionLink("Register", "Register")</h2>
        <h2 class="btn btn-default btn-lg">@Html.ActionLink("Log in", "Login")</h2>
    }
</div>