@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Security.Claims

<div>
    <img class="product-img" src="~/images/seafood.jpg" />
    <h2 class="product-title">SON OF COD SEAFOOD</h2>
    <h4 class="small-title"><em>The Freshest Around</em></h4>
</div>

<hr />

<div class="container about">
    <h2 class="about-title">THE BEST SEAFOOD | THE BEST SERVICE</h2>
    <h3>Since 1918, Son of Cod Seafood has supplied the highest-quality seafood available in the world to restaurants, hotels, caterers and grocers throughout Seattle and the Northwest area. As the region’s largest supplier of fresh fish, we’re proud to provide our community with an unparalleled selection of seafood that showcases the same passionate dedication to personal service that this multigenerational family company has fostered for nearly a century.</h3>
    <h2 class="btn btn-default btn-lg">@Html.ActionLink("Learn More About Us", "About")</h2>
</div>

<div class="container index-buttons">
    <h2 class="newsletter">FIND OUT THE LATEST IN SEAFOOD NEWS & SON OF COD</h2>
    <h2><strong>THE NEWSLETTER</strong></h2>
    @if (User.Identity.IsAuthenticated)
    {
        <h2 class="welcome-message">Welcome Back, @User.Identity.Name!</h2>
        @using (Html.BeginForm("LogOff", "Account"))
        {
            <input type="submit" class="btn btn-default btn-lg" value="Log out" />
        }
    }
    else
    {
        <h2 class="btn btn-default btn-lg">@Html.ActionLink("Register", "Register")</h2>
        <h2 class="btn btn-default btn-lg">@Html.ActionLink("Log in", "Login")</h2>
    }
</div>

<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/images/black.jpeg" alt="Fish Market" width="1200" height="300">
                        <div class="carousel-caption">
                            <div class="col-md-12 text-center">
                                <h1>
                                   Visit Us at the Market | Seattle, WA
                                </h1>
                                <button class="btn btn-default btn-lg">
                                    Learn More Here
                                </button>

                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/images/market.jpg" alt="Fish" width="1200" height="300">
                        <div class="carousel-caption">
                     <div class="col-md-12 text-center">
                                <h1>
                                    Where Do We Sell Our Products?
                                </h1>
                                <button class="btn btn-default btn-lg">
                                    Find Out Here
                                </button>

                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/images/danger.jpg" alt="Fisherman" width="1200" height="300">
                        <div class="carousel-caption">
                            <div class="col-md-12 text-center">
                                <h1>
                                    Find a Rewarding Career With Us
                                </h1>
                                <button class="btn btn-default btn-lg">
                                    Careers
                                </button>

                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a><a class="right carousel-control"
                   href="#carousel-example-generic" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right">
                </span>
            </a>
        </div>

    </div>
</div>

<div class="footer">
    <hr />
    <br />
</div>